{
  "name": "xanpool-full-stack-assignment",
  "version": "1.0.0",
  "description": "This application is for techical assessment.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "api:prod:start": "env-cmd -f .env npm run api:build && ts-node ./back-end/build/src/index.js",
    "api:dev:start": "env-cmd -f .env ts-node-dev ./back-end/src/index.ts",
    "api:db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate",
    "api:dbmigrate": "cross-env NODE_ENV=development npx sequelize-cli db:migrate",
    "api:build": "rimraf ./back-end/build && tsc -p tsconfig.json",
    "tslint": "tslint --project tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"**/*.{ts,js,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"**/*.{ts,js,tsx}\"",
    "client:start": "env-cmd -f .env react-scripts start",
    "client:build": "env-cmd -f .env react-app-rewired build",
    "client:eject": "react-scripts eject"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cookie-session": "^2.0.42",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^16.11.6",
    "@types/sequelize": "^4.28.10",
    "@types/validator": "^13.6.6",
    "axios": "^0.24.0",
    "body-parser": "^1.19.0",
    "bootstrap": "^5.1.3",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "path": "^0.12.7",
    "pg": "^8.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.2",
    "react-scripts": "4.0.3",
    "sequelize": "^6.9.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.6",
    "husky": "^4.3.8",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,tsx}": [
      "npm run prettier:check",
      "npm run prettier:write",
      "npm run tslint",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
