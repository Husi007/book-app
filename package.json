{
  "name": "xanpool-full-stack-assignment",
  "version": "1.0.0",
  "description": "This application is for techical assessment.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "start": "npm run dev:start",
    "prod:start": "npm run build && ts-node build/src/index.js",
    "dev:start": "npm run build && ts-node-dev build/src/index.js",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate",
    "dbmigrate": "cross-env NODE_ENV=development npx sequelize-cli db:migrate",
    "build": "rimraf build && tsc -p tsconfig.json",
    "tslint": "tslint --project tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,js}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,js}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cookie-session": "^2.0.42",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^16.11.6",
    "@types/sequelize": "^4.28.10",
    "@types/validator": "^13.6.6",
    "body-parser": "^1.19.0",
    "cookie-session": "^1.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "sequelize": "^6.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "husky": "^4.3.8",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "npm run prettier:check",
      "npm run prettier:write",
      "npm run tslint",
      "git add"
    ]
  }
}
